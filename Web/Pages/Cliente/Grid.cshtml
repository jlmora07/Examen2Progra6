@page
@model Web.Pages.Cliente.GridModel
@{
}
<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Clientes
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>

            
         <div class="row">
         <div id="tabla" class="col" >
            <div class="table-responsive ">
                    <table id="GridView" class="table table-striped table table-hover table table-bordered ">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Identificación</th>
                                <th>Tipo Cliente</th>
                                <th>Nombre</th>
                                <th>Primer Apellido</th>
                                <th>Segundo Apellido</th>
                                <th>Fecha Nacimiento</th>
                                <th>Nacionalidad</th>
                                <th>Fecha Defuncion</th>
                                <th>Genero</th>
                                <th>Nombre Padre</th>
                                <th>Nombre Madre</th>
                                <th>Pasaporte</th>
                                <th>Cuenta IBAN</th>
                                <th>Correo</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.GridList)
                            { 
                            <tr>
                                <td>@item.IdCliente</td>
                                <td>@item.Identificacion</td>
                                <td>@item.TipoCliente.Descripcion</td>
                                <td>@item.Nombre</td>
                                <td>@item.PrimerApellido</td>
                                <td>@item.SegundoApellido</td>
                                <td>@item.FechaNacimiento </td>
                                <td>@item.Nacionalidad</td>
                                <td>@item.FechaDefuncion</td>
                                <td>@item.Genero</td>
                                <td>@item.NombreApellidosPadre</td>
                                <td>@item.NombreApellidosMadre</td>
                                <td>@item.Pasaporte</td>
                                <td>@item.CuentaIBAN</td>
                                <td>@item.CorreoNotifica</td>

                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdCliente">
                                        <i class='bx bx-edit-alt'></i>
                                    </a>
                                    <button type="button" class="btn btn-danger" onclick="GridCliente.OnclickEliminar(@item.IdCliente)">
                                        <i class='bx bxs-trash'></i>
                                    </button>
                                </td>
                            </tr>                            
                            }
                        </tbody>
                    </table>
                    </div>
                    </div>
                </div>
            
        </div>
    </div>


</div>
@section  Scripts{ 

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Cliente/Grid.js"></script>
}